# Configuración de gRPC para Sui Stack

# Entorno: 'devnet' | 'testnet' | 'mainnet'
REACT_APP_GRPC_ENVIRONMENT=devnet

# Endpoint gRPC personalizado (opcional)
# Si no está configurado, se usará el endpoint predeterminado del entorno
REACT_APP_GRPC_ENDPOINT=

# Puerto gRPC (opcional, normalmente 443)
REACT_APP_GRPC_PORT=443

# Habilitar auto-conexión al cargar la app
REACT_APP_GRPC_AUTO_CONNECT=true

# Timeout para requests gRPC en milisegundos
REACT_APP_GRPC_TIMEOUT=30000

# Habilitar logs de debug en gRPC
REACT_APP_GRPC_DEBUG=false

# URL personalizada de SuiNS (opcional)
REACT_APP_SUINS_ENDPOINT=

# Dirección por defecto para consultas (opcional)
REACT_APP_DEFAULT_WALLET_ADDRESS=

# Habilitar campo de endpoint personalizado en UI
REACT_APP_SHOW_CUSTOM_ENDPOINT=true

# Máximo número de reintentos para requests fallidos
REACT_APP_GRPC_MAX_RETRIES=3

# Delay inicial de reintento en milisegundos
REACT_APP_GRPC_RETRY_DELAY=1000
