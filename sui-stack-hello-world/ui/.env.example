# Sui Network Configuration Examples
# Copy this file to .env.local and configure for your environment

# ============================================================================
# NETWORK TYPE
# ============================================================================
# Options: local, testnet, devnet, mainnet
VITE_SUI_NETWORK=testnet

# ============================================================================
# LOCAL NETWORK (when using sui start locally)
# ============================================================================
# VITE_SUI_NETWORK=local
# VITE_FULLNODE_URL=http://127.0.0.1:9000
# VITE_FAUCET_URL=http://127.0.0.1:9123
# VITE_GRAPHQL_URL=http://127.0.0.1:9125/graphql
# VITE_INDEXER_URL=http://127.0.0.1:9124
# VITE_ENABLE_GRAPHQL=false

# ============================================================================
# DEVNET (integration)
# ============================================================================
# VITE_SUI_NETWORK=devnet
# VITE_FULLNODE_URL=https://fullnode.devnet.sui.io:443
# VITE_FAUCET_URL=https://faucet.devnet.sui.io/gas
# VITE_GRAPHQL_URL=https://graphql.devnet.sui.io/graphql
# VITE_ENABLE_GRAPHQL=true

# ============================================================================
# TESTNET (default)
# ============================================================================
# VITE_FULLNODE_URL=https://fullnode.testnet.sui.io:443
# VITE_FAUCET_URL=https://faucet.testnet.sui.io/gas
# VITE_GRAPHQL_URL=https://graphql.testnet.sui.io/graphql
# VITE_ENABLE_GRAPHQL=true

# ============================================================================
# MAINNET (production)
# ============================================================================
# VITE_SUI_NETWORK=mainnet
# VITE_FULLNODE_URL=https://fullnode.mainnet.sui.io:443
# VITE_GRAPHQL_URL=https://graphql.mainnet.sui.io/graphql
# VITE_ENABLE_GRAPHQL=true
# Note: No faucet on mainnet

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================
# Enable GraphQL features (set to false if GraphQL endpoint unavailable)
VITE_ENABLE_GRAPHQL=true

# IDs de paquetes Move para la dApp
VITE_GREETING_PACKAGE_ID=0x9e10377e3868f6929cc1d38b5fb9deccf0fbc3b7afa0a7d2b395b8c23fe9a152
VITE_TOKEN_PACKAGE_ID=0x9e10377e3868f6929cc1d38b5fb9deccf0fbc3b7afa0a7d2b395b8c23fe9a152

# URL personalizada de SuiNS (opcional)
REACT_APP_SUINS_ENDPOINT=

# Dirección por defecto para consultas (opcional)
REACT_APP_DEFAULT_WALLET_ADDRESS=

# Habilitar campo de endpoint personalizado en UI
REACT_APP_SHOW_CUSTOM_ENDPOINT=true

# Máximo número de reintentos para requests fallidos
REACT_APP_GRPC_MAX_RETRIES=3

# Delay inicial de reintento en milisegundos
REACT_APP_GRPC_RETRY_DELAY=1000
