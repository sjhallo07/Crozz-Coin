{
	"name": "sui-monorepo",
	"private": true,
	"license": "Apache-2.0",
	"scripts": {
		"test": "turbo run test",
		"test:dev": "turbo run test -- --run",
		"changeset-version": "pnpm changeset version && pnpm --filter @mysten/sui codegen:version",
		"prettier:check": "prettier -c --ignore-unknown .",
		"prettier:fix": "prettier -w --ignore-unknown .",
		"prettier:fix:watch": "onchange '**' -i -f add -f change -j 5 -- prettier -w --ignore-unknown {{file}}",
		"eslint:check": "eslint --max-warnings=0 .",
		"eslint:fix": "pnpm run eslint:check --fix",
		"lint": "pnpm run eslint:check && pnpm run prettier:check",
		"lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix"
	},
	"pnpm": {
		"overrides": {
			"node-notifier": "10.0.0",
			"async": "3.2.2",
			"nth-check": "2.0.1",
			"yaml@<2.2.2": ">=2.2.2",
			"semver@<7.5.2": ">=7.5.2",
			"postcss@<8.4.31": ">=8.4.31",
			"dompurify@>=3.0.0 <3.1.3": ">=3.1.3",
			"cross-spawn@5.1.0": "7.0.5",
			"base-x@=5.0.0": ">=5.0.1"
		}
	},
	"engines": {
		"pnpm": ">=9.0.0"
	},
	"manypkg": {
		"ignoredRules": [
			"INTERNAL_MISMATCH",
			"ROOT_HAS_DEV_DEPENDENCIES"
		]
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@manypkg/cli": "^0.25.1",
		"@tanstack/eslint-plugin-query": "^5.91.2",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-config-react-app": "^7.0.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-header": "^3.1.1",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-require-extensions": "^0.1.3",
		"eslint-plugin-tsdoc": "^0.5.0",
		"eslint-plugin-unused-imports": "^4.3.0",
		"graphql-config": "^5.1.5",
		"prettier": "^3.7.4",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"tsx": "^4.21.0",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3"
	},
